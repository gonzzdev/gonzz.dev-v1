---
import Layout from '../layouts/Layout.astro';
import SectionContainer from '../components/SectionContainer.astro';
import Badge from '../components/Badge.astro';
import Experience from '../components/Experience.astro';
import Projects from '../components/Projects.astro';
import Forms from '../components/Forms.astro';
---

<Layout 
title="José González | Design & Software Development - P"
description="Hire José González to design your brand and create your professional website. +2 years of experience in design and breaking into frontend development."
>
	<main class="px-4">
		<SectionContainer class="py-44 pb-20">
			<img 
			class="rounded-full w-20 h-20 mb-4 -mt-10"
			src="https://avatars.githubusercontent.com/u/130326374?v=4" 
			alt="GitHup Prpfile Picture" 
			/>

			<h1 class="text-[#E8E4EA] text-xl md:text-2xl lg:text-4xl font-bold flex flex-row gap-x-8 pb-4 lg:pb-4">
				Hey there! This is José 🕺🏽<a 
				href="https://www.linkedin.com/in/gonzz-art/" 
				target="_blank" 
				rel="noopener" 
				class="flex justify-center items-center">
				<Badge>Cooking something | Let's talk</Badge>
		    </a>
			</h1>

			<h2 class="text-md lg:text-xl text-wrap max-w-[800px]">
				<span class="text-[#FF9933]">Visual designer and aspiring frontend developer</span><span class="text-[E8E4EA] opacity-80">. I specialize in crafting unique design & web solutions. Let me help you captivate your audience and drop the boring looks. I am living in <a href="https://www.google.com.mx/maps/place/63735+Nuevo+Vallarta,+Nay./@20.6970721,-105.311228,14z/data=!3m1!4b1!4m6!3m5!1s0x842146a3108c50c7:0x4cb5066faa51643d!8m2!3d20.6986205!4d-105.2964898!16s%2Fm%2F080j413?entry=ttu" target="_blank" rel="noopener"><em class="link link-underline link-underline-white">Nuevo Vallarta, MX</em></a> 🏖️ and working <em>everywhere</em>.</span>
			</h2>

			<ul class="flex justify-center gap-10 pt-20 pl-2 pr-2 items-center flex-wrap">

				<li class="w-[30px] hover:scale-150 transition">
					<a href="https://www.linkedin.com/in/gonzz-art/" target="_blank" rel="noopener">
						<img src="./linkedin.svg" alt="LinkedIn logo">
					</a>
				</li>

				<li class="w-[25px] hover:scale-150 transition">
					<a href="https://www.github.com/gonzzdev" target="_blank" rel="noopener">
						<img src="./github.svg" alt="GitHub logo">
					</a>
				</li>

				<li class="w-[32px] hover:scale-150 transition">
					<a href="https://www.twitter.com/gonzz_art" target="_blank" rel="noopener">
						<img src="./twitter.svg" alt="Twitter logo">
					</a>
				</li>

				<li class="w-[30px] hover:scale-150 transition">
					<a href="https://www.instagram.com/jos.gonzz" target="_blank" rel="noopener">
						<img src="./instagram.svg" alt="Instagram logo">
					</a>
				</li>

				<li class="w-[30px] hover:scale-150 transition">
					<a href="https://www.youtube.com/channel/UCUWgFhhL4YoEpylnXCrb_Cg">
						<img src="./youtube.svg" alt="YouTube logo">
					</a>
				</li>
			</ul>
		</SectionContainer>

		<SectionContainer id="experience">
			<h3 class="text-3xl font-semibold pt-20 mb-4">👷🏽 Work experience</h3>
			<Experience />
		</SectionContainer>

		<SectionContainer id="projects">
			<h3 class="text-3xl font-semibold pt-20 mb-4">💻 Projects</h3>
			<Projects />
		</SectionContainer>

		<SectionContainer id="contact">
			<Forms />
		</SectionContainer>
	</main>
	<a href="#" class="fixed fill-[#e8e4ea] p-9 bottom-6 right-6 hidden md:block hover:scale-110 transition opacity-25 hover:opacity-100" >
		<img class="size-12" src="./circle-arrow-up.svg" alt="Srcroll to top">
	</a>
</Layout>