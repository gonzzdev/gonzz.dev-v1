---
 export interface Props {
    date: string
    title: string
    company: string
    description: string
    link?: string
    stack?: string
}
const { date, title, description, link, stack, company } = Astro.props
---
<div class="absolute w-3 h-3 bg-[#ff9933] dark:bg-[#6c3f99] rounded-full mt-1.5 -start-1.5"></div>
<time class="mb-1 text-sm font-medium leading-none text-[#0f0c11] dark:text-[#e8e4ea] opacity-80">{date}</time>
<h3 class="text-lg font-semibold text-[#6c3f99] hover:text-[#ff9933] dark:text-[#ff9933] hover:dark:text-[#6c3f99] transition mt-2">{title} - {company}</h3>
<p class="mb-4 text-base font-semibold text-[#0f0c11] dark:text-[#e8e4ea]/80 text-pretty">{description}.</p>
<h3 class="text-sm font-bold text-[#0f0c11] dark:font-semibold dark:text-[#e8e4ea] pt-2 pb-6">{stack}</h3>
{
    link && (
    <a 
    href={link} 
    target="_blank"
    rel="noopener"
    class="inline-flex items-center px-4 py-2 text-sm font-bold text-[#6c3f99] bg-transparent border-[2px] border-[#6c3f99] hover:border-[#0f0c11] rounded-full hover:bg-[#0f0c11] hover:text-[#e8e4ea] transition-all duration-200 dark:bg-transparent dark:text-[#ff9933] dark:border-[#ff9933] dark:hover:text-[#0f0c11] dark:hover:bg-[#e8e4ea] dark:hover:border-[#e8e4ea]">
        Download CV 
    <svg class="w-3 h-3 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
    </svg>
    </a>
    )
}


