---
 export interface Props {
    date: string
    title: string
    company: string
    description: string
    link?: string
    stack?: string
}
const { date, title, description, link, stack, company } = Astro.props
---
<div class="absolute w-3 h-3 bg-[#E8E4EA] rounded-full mt-1.5 -start-1.5 border border-[#E8E4EA] dark:border-[gray-900] dark:bg-gray-700"></div>
<time class="mb-1 text-sm font-normal leading-none text-[rgb(232,228,234)] dark:text-gray-500 opacity-80">{date}</time>
<h3 class="text-lg font-semibold text-[#ff9933] dark:text-white mt-2">{title} - {company}</h3>
<p class="mb-4 text-base font-normal text-[#e8e4ea] dark:text-[#6c3f99] opacity-80 text-pretty">{description}.</p>
<h3 class="text-sm font-semibold text-[#e8e4ea] dark:text-[#e8e4ea] pt-2 pb-6">{stack}</h3>
{
    link && (
    <a 
    href={link} 
    class="inline-flex items-center px-4 py-2 text-sm font-bold text-[#0f0c11] bg-[#e8e4ea] border border-[#e8e4ea] rounded-full hover:bg-[#6c3f99] hover:text-[#e8e4ea] transition-all duration-[250ms] focus:z-10 focus:ring-4 focus:outline-none focus:ring-[#e8e4ea] focus:text-[#6c3f99] dark:bg-[#0f0c11] dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-gray-700">
        See more 
    <svg class="w-3 h-3 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
    </svg>
    </a>
    )
}


