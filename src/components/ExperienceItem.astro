---
 export interface Props {
    date: string
    title: string
    company: string
    description: string
}
const { date, title, description, company } = Astro.props
---
<div class="bg-[#171717]/20 rounded-2xl border-2 border-[#F4F4F4]/10 dark:bg-[#171717]/40">
    <div class="absolute w-3 h-3 bg-[#FAAB00] dark:bg-[#B617E6] rounded-full mt-7 -start-1.5"></div>
    <h3 class="text-lg font-semibold text-[#B617E6] hover:text-[#FAAB00] dark:text-[#FAAB00] hover:dark:text-[#B617E6] transition px-10 pt-5">{title} - {company}</h3>
    <time class="mb-1 text-xs font-medium leading-none text-[#0f0c11] dark:text-[#F4F4F4] opacity-80 px-10">{date}</time>
    <p class="mb-4 text-base font-semibold text-[#0f0c11] dark:text-[#F4F4F4]/80 text-pretty mt-2 px-10 pb-2">{description}.</p>
</div>


